<div class="reviews">
  <h2><%= t "user.reviews" %></h2>
  <div><%= paginate reviews %></div>
  <% reviews.each do |review| %>
    <div class="toggle-overflow item">
      <div class="image">
        <%= link_to review_path(review) do %>
          <img src="<%= review.movie.avatar %>">
        <% end %>
      </div>
      <h3>
        <%= link_to review_path(review) do %>
          <%= review.movie.name %>
          <span class="movie-year">(<%= review.movie.realease_date.strftime("%Y") %>)</span>
          <%= t "user.review" %>
        <% end %> 
      </h3>
      <h4><%= review.title %></h4>
      <div class="details"><%= review.created_at.strftime("%d %b %Y") %></div>
      <div class="more">
        <%= review.content.html_safe %>
      </div>
      <% if user_signed_in? %>
        <% if @user.id == current_user.id %>
          <%= link_to t("users.edit"),edit_user_review_path(current_user, review) %>
          <%= link_to t("users.delete"), user_review_path(current_user, review),
            method: :delete, data: {confirm: "Are you sure?"} %>
        <% end %>
      <% end %>
    </div><hr>
  <% end %>
</div>
