<% provide(:title, @type.name) %>
<div class="row movies-list">
  <ul class="breadcrumb">
    <li><%= link_to t("user.home"), root_path, data: {turbolinks: false} %></li>
    <li><%= link_to t("user.movies"), movies_path, data: {turbolinks: false} %></li>
    <li class="active">
      <%= link_to @type.name, type_path(@type), data: {turbolinks: false} %>
    </li>
  </ul>

  <div id="movies">
    <%= render "movies", support: @support, type: @type %>
  </div>
</div>
