<% provide(:title, t("home.contact")) %>
<figure class="img_inner">
  <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d5117.563130540999!2d105.83854358735337!3d21.004719371572026!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3135ac76ccab6dd7%3A0x55e92a5b07a97d03!2sHanoi+University+of+Science+and+Technology!5e0!3m2!1sen!2sus!4v1508315542619"
    width="100%" height="350" frameborder="0" style="border:0" allowfullscreen></iframe>
</figure>

<main id="contact-us" class="main-content" role="main">
  <div class="row contact-page">
    <h1 class="text-center"><%= t ".contact" %></h1>
    <div class="section-under-title-line"></div>
    <div class="row">
      <div class="col-md-6">
        <%= form_for Feedback.new, id: "contact-form" do |f| %>
          <label class="top-label">
            <%= t ".name" %> <span style="color: red">*</span>
          </label>
          <%= f.text_field :name, id: "contact-name", class: "required contact-form-input" %>
          <label class="top-label">
            <%= t ".email" %> <span style="color: red">*</span>
          </label>
          <%= f.email_field :email, id: "contact-email", class: "required contact-form-input" %>
          <!--<label class="top-label"><= t ".phone" %></label>-->
          <!--<input id="contact-phone" class="contact-form-input"-->
            <!--type="tel" pattern="[0-9]{10}" name="contact-phone">-->
          <label class="top-label"><%= t ".subject" %></label>
          <%= f.text_field :subject, id: "contact-subject", class: "contact-form-input" %>
          <label class="top-label"><%= t ".message" %></label>
          <%= f.text_area :content, id: "contact-message", class:"contact-form-input" %>
          <%= button_tag type: :submit, class: "btn-primary submit-feedback" do %>
            Send your message
          <% end %>
        <% end %>
      </div>
      <div class="col-md-6">
        <h3 class="font-24"><%= t ".hello" %></h3>
        <p><%= Faker::Lorem.paragraph(3, true) %></p>
        <h3 class="font-24 bolder"><%= t ".info" %></h3>
        <div class="contact-title bolder"><%= t ".hour" %></div>
        <p><%= t(".day_off").html_safe %></p>
        <div class="contact-title"><%= t ".address" %></div>
        <p><%= t(".details").html_safe %></p>
        <div class="contact-title"><%= t ".phone" %></div>
        <p><%= t ".number" %></p>
        <div class="contact-title"><%= t ".email" %></div>
        <p><%= t ".mail" %></p>
      </div>
    </div>
  </div>
</main>
<br><br>
