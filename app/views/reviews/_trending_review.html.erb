<div class="trending-review">
  <div class="sidebar-header">
    <span><%= t "reviews.show.popular" %></span>
  </div>

  <div class="sidebar-body">
    <% top_reviews.each do |review| %>
      <div class="bp-block article-info col-xs-12">
        <div class="col-xs-3 article-list-left cover">
          <%= link_to review_path(review) do %>
            <%= image_tag review.movie.avatar, alt: review.movie.name %>
          <% end %>
        </div>
        <div class="col-xs-9">
          <h4>
            <%= link_to review_path(review) do %>
              <%= review.title %>
            <% end %>
          </h4>
          <p class="author-small">By
            <%= link_to user_path(review.user) do %>
              <%= review.user.name %>
            <% end %>
          </p>
          <p><%= truncate(review.content, length: 100) %></p>
        </div>
      </div>
    <% end %>

    <div class="sidebar-footer">
      <span>
        <%= link_to root_path do %>
          <%= t "reviews.show.more_review" %> &gt;
        <% end %>
      </span>
    </div>
  </div>
</div>
