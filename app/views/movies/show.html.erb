              <div class="movie-info-show rate">
                <div class="icon imdb">
                  <strong>0</strong>
                  <small>IMDb</small>
                </div>
                <a href="#" target="_self" class="litebox icon play-trailer" data-litebox-group="trailer">&nbsp;</a>
              </div>
              <span class="publish-date-new">
                <span class="date">06</span>
                <span class="month">/10</span>
              </span>
              <a href="#" class="film-name" target="_blank">Kẻ Trộm Chó (C16)</a>
            </div>
          </div>
        </div>
      </div>
    </section> <!-- end other movies -->
  </div>
</div>
