<li class="search-item col-xs-12">
  <div class="row">
    <%= link_to movie_path(movie), data: {turbolinks: false} do %>
      <div class="col-xs-2 col-sm-3 col-md-3">
        <%= image_tag movie.avatar, class: "img-responsive" %>
      </div>
      <div class="col-xs-10 col-sm-9 col-md-9 item-content">
        <div class="row">
          <p class="item-search"><strong><%= movie.name %></strong></p>
          <p class="item-search"><i><%= Movie.name %></i></p>
        </div>
      </div>
      <div class="clear-fix"></div>
    <% end %>
  </div>
</li>
