<% my_notifications.each do |notification| %>
  <li class="list-group-item">
    <%= link_to notification.link_to do %>
      <div class="row">
        <span class="list-group-item-heading row">
          <%= notification.content.html_safe %>
        </span>
        <span class="list-group-item-text">
          <%= time_ago_in_words notification.created_at %>
          ago
        </span>
      </div>
    <% end %>
  </li>
<% end %>
